//main stylus file
@import 'fonts.styl'
@import 'helpers.styl'
$sessionColor = rgba(236,76,76,0.8)
$main-font = 'Open Sans', sans-serif

body, p
  font-family: $main-font
h1, h2, h3, h4, h5, .button
  font-family: $main-font
  font-weight: bold

.trackSelector
		min-height 90px
	.box
		display block
	.slider-pager-page
		.icon
			font-size 0.8em
	.slider-pager-page.active
		.icon
			font-size 1em
			opacity: 0.9
			
.main-header
	padding 1.5em 0
	background-size cover
	background-position 100% 20%
	background-repeat no-repeat
	margin -1em -1em 1em -1em
	.main-logo
		max-width 90%
		margin 0 auto
		display block
.sessions-list
	overflow hidden
	.session
		width 100%
		margin 0.5em 0
	.session-title, .session-info
		font-size 1.1em
		line-height 1.2
		white-space: normal
	.session-note
		font-size 0.80em
		line-height 0.9
		margin-bottom 0.5em
		color darken($sessionColor, 90%)
	.session-content
		&:before
			content ''
			display block
			width 100%
			height 100%
			position absolute
			background $sessionColor
			opacity: 0.5
			z-index 999
